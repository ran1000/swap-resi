<div class="container pt-3 session">
  <div class="row">
    <div class="session-form col">
      <h2 class="title-session">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :username,
                      required: true,
                      minlength: "6",
                      placeholder: "Type your Username",
                      autofocus: true,
                      input_html: { autocomplete: "username" } %>
          <%= f.input :email,
                      required: true,
                      pattern: URI::MailTo::EMAIL_REGEXP,
                      placeholder: "Type your email",
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      minlength: "6",
                      placeholder: "Type your password",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      placeholder: "Repeat your password",
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-actions submit-button d-grid gap-2">
          <%= f.button :submit, "Sign up", class: "btn btn-success p-2 mt-4 rounded" %>
        </div>
      <% end %>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="session-pic col align-self-center p-5">
      <%= cl_image_tag("odcka7sohfruod6s5qa6.png", width: 500, height: 500, crop: "pad") %>
    </div>
  </div>
</div>
