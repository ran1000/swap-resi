<div class="container-fluid session">
  <div class="container-md">
    <h2 class="title-session text-start">Sign up</h2>
  </div>
  <div class="container-md mx-auto reverse-container row">
    <div class="session-form col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, validate: true) do |f| %>
        <%= f.error_notification %>
        <div class="session-form">
          <%= f.input :username,
                      required: false,
                      minlength: "6",
                      placeholder: "Barteby",
                      autofocus: true,
                      hint: "6 characters minimum",
                      input_html: { class: "arting-form-inputs mt-3",  autocomplete: "username" } %>
          <%= f.input :email,
                      required: false,
                      pattern: URI::MailTo::EMAIL_REGEXP,
                      placeholder: "Ex. barteby@mail.com",
                      autofocus: true,
                      input_html: { class: "arting-form-inputs mt-3",  autocomplete: "email" }%>
          <%= f.input :password,
                      required: false,
                      minlength: "6",
                      placeholder: "******",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "arting-form-inputs mt-3",  autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      placeholder: "Repeat your password",
                      input_html: { class: "arting-form-inputs mt-3",  autocomplete: "new-password" } %>
        </div>
        <div class="form-actions submit-button d-grid gap-2">
          <%= f.button :submit, "Sign up", class: "btn btn-success p-2 mt-4 rounded" %>
        </div>
      <% end %>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="session-pic align-self-center p-4 col-md-6">
      <% if Rails.env.production? %>
        <%= cl_image_tag("hiksgvoqk9dusacrxqfn.png", crop: "pad") %>
      <% else %>
        <%= cl_image_tag("useem4xq6ebyvhsfomob.png", crop: "pad") %>
      <% end %>
    </div>
  </div>
</div>
