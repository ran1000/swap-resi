<div class="container pt-5">
  <h3>Create a new Resi</h3>
  <div class="d-flex justify-content-center">
    <div class="form-img"></div>
  </div>
  <%# client_side_validations gem implemented %>
  <%= simple_form_for @space, validate: true do |f| %>
    <%= f.input :name, placeholder: "Artist's Atelier", hint: "Minimum 6 characters" %>
    <%= f.input :description, placeholder: "It is a 30 m2 space with ..." %>
    <%= f.input :daily_cost, class:"", placeholder: "5", hint: "Specify a number between 3 and 20 swap-credits" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Create Resi", class: "btn btn-success p-2 ps-5 pe-5 mt-4 rounded" %>
  <% end %>
</div>
