<div class="container pt-3 session">
  <h2 class="title-session">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-turbo": false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  pattern: URI::MailTo::EMAIL_REGEXP,
                  placeholder: "Type your email",
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions submit-button d-grid gap-2">
      <%= f.button :submit, "Send me reset password instructions", class:"btn btn-success p-2 mt-4 rounded" %>
    </div>
  <% end %>
  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
