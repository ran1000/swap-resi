<div class="container">
  <h1>Manage your spaces</h1>
  <% @bookings.each do | booking | %>
    <p>
      <%= booking.space.name %>
    </p>
    <p> Booked by:
      <%= booking.user.username %>
    </p>
    <p> Offered by:
      <%= booking.space.user.username %>
    </p>
    <p> Message:
      <%= booking.message %>
    </p>
      <p>
        <%= booking.updated_at.strftime("%B %d, %Y") %>
      </p>
    <div class="status" data-controller="status">
      <% if booking.pending? %>
        <p>
          This booking is <strong><%= booking.status %></strong>
        </p>
        <%= simple_form_for(booking) do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: "accepted" } %>
            <%= f.submit "Accept", class: "btn btn-success p-2 ps-5 pe-5 mt-4 rounded" %>
        <% end %>
        <%= simple_form_for(booking) do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: "declined" } %>
            <%= f.submit "Decline", class: "btn btn-success p-2 ps-5 pe-5 mt-4 rounded" %>
        <% end %>
      <% else %>
        <p>
          <%= booking.status %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
