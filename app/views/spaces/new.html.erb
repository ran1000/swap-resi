<div class="container pt-5">
  <h3>Create a new Resi</h3>
  <div class="d-flex justify-content-center">
    <div class="form-img"></div>
  </div>
  <%= simple_form_for @space, html: { class: ""} do |f| %>
    <%= f.input :name, required: true, input_html: { minlength: 6, maxlength: 70 } %>
    <%= f.input :description %>
    <%= f.input :daily_cost, required: true, class:"" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Submit Resi", class: "btn btn-success p-2 ps-5 pe-5 mt-4 rounded" %>
  <% end %>
</div>
<%# Add form validation %>
